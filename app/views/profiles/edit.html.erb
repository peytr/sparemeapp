<h1>Your Profile</h1>

<%= form_with(model: @profile, url: profile_path, local: true) do |form| %>

    <div class="field">
    <%= form.label :first_name %><br />
    <%= form.text_field :first_name, required: true %>
    </div>

    <div class="field">
        <%= form.label :last_name %><br />
        <%= form.text_field :last_name, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :street_number %><br />
        <%= form.number_field :street_number, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :street_name %><br />
        <%= form.text_field :street_name, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :suburb %><br />
        <%= form.text_field :suburb, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :state %><br />
        <%= form.text_field :state, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :postcode %><br />
        <%= form.number_field :postcode, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :country %><br />
        <%= form.text_field :country, required: true  %>
    </div>
    <br />
    <div class="field">
        <%= form.label :business_name %><br />
        <%= form.text_field :business_name %>
    </div>
    <br />
    <div class="field">
        <%= form.label :business_number %><br />
        <%= form.text_field :business_number %>
    </div>
    <p>
        <%= form.submit %>
    </p>

<% end %>