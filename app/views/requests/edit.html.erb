<h2>Edit Spare Parts Request</h2>

    <%= form_with(model: @request, url: request_path, local: true) do |f| %>

        <div class="field">  
            <%= f.label :part_name %><br />
            <%= f.text_field :part_name, autofocus: true, required: true  %>
        </div>
        <br>
        <div class="field">  
            <%= f.label :part_description %><br />
            <%= f.text_area :part_description, required: true  %>
        </div>
        <br>
        <div class="field">  
            <%= f.label :car_make %><br />
            <%= f.text_field :car_make  %>
        </div>
        <br>
        <div class="field">  
            <%= f.label :car_model %><br />
            <%= f.text_field :car_model %>
        </div>
        <br>
        <div class="field">  
            <%= f.label :car_series %><br />
            <%= f.text_field :car_series %>
        </div>
        <br>
        <div class="field">  
            <%= f.label :car_year %><br />
            <%= f.text_field :car_year %>
        </div>
        <br>
        <div class="field">  
            <%= f.label :image %><br />
            <%= f.hidden_field :image, value: @request.cached_image_data %>
            <%= f.file_field :image %>
        </div>
        <br>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
    </div>
</div>