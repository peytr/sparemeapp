
<div class="home-top-section">
    <div class="notice-container">
        <% if notice %>
            <p class="notice"><%= notice %></p>
        <% elsif alert %>
            <p class="alert"><%= alert %></p>
        <% end %>
    </div>
    <div class="home-tagline">
        <span>List Your Spare Parts Needs - Have the Market Come to You</span>
    </div>
</div>
<div class="home-bottom-section">
    <div class="home-buttons">
        <div class="submit">
            <%= link_to "Submit Parts Request", new_request_path, class: "button-submit" %>
        </div>

        <div class="browse">
            <%= link_to "Browse Parts Requests", requests_path, class: "button-browse" %>
        </div>
    </div>
</div>